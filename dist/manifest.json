{
    "name": "Veracross GPA Viewer",
    "description": "View your GPA below your grades list on veracross student portals.",
    "version": "0.1.5",
    "manifest_version": 2,
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_title": "TSRWPCX",
        "default_popup": "popup.html"
    },
    "permissions": [
        "declarativeContent",
        "storage",
        "tabs",
        "alarms",
        "cookies",
        "https://*.veracross.com/",
        "notifications"
    ],
    "content_scripts": [{
        "matches": ["https://portals.veracross.com/gulliver/student"],
        "js": ["./js/content.js"]
    }],
    "background": {
        "scripts": ["./js/background.js"],
        "persistent": false
    }
}